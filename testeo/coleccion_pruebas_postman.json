	"item": [
		{
			"name": "1. Create Task",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Asume que la respuesta devuelve el item creado con un 'task_id'",
							"try {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData && jsonData.task_id) {",
							"        pm.collectionVariables.set(\"taskId\", jsonData.task_id);",
							"        console.log(\"ID de tarea guardado: \" + jsonData.task_id);",
							"    }",
							"} catch (e) {",
							"    console.log(\"No se pudo guardar el task_id de la respuesta.\");",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Mi primera tarea\",\n    \"description\": \"Hacer la compra\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/task",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"task"
					]
				},
				"description": "Crea un nuevo elemento"
			},
			"response": []
		},
		{
